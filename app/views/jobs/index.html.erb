<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>給料</th>
      <th>状態</th>
      <th>スキル</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.salary %></td>
        <td><%= job.status %></td>
        <td><%= job.skill %></td>
        <td><%= job.time %></td>
        <% if user_signed_in? && current_user.role == 2 %>
          <td><%= link_to '表示', job %></td>
          <td><%= link_to '編集', edit_job_path(job) %></td>
          <td><%= link_to '削除', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><%= link_to '申し込み', '#' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? && current_user.role == 2 %>
  <%= link_to '作業登録', new_job_path %>
<% end %>
