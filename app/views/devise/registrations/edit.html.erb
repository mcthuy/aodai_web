<div class="edit-user">
  <h2><font size="8">ユーザ編集</font></h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field">
      <%= f.label :メールアドレス , class: "input-email" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"input-textbox" %>
    </div>
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
  
    <div class="field">
      <%= f.label :新しいパスワード , class:"new-password" %>
            <em><%= @minimum_password_length %> 文字以上</em><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"input-textbox" %>
      <% if @minimum_password_length %>
        <br />
      <% end %>
    </div>
  
    <div class="field">
      <%= f.label :新しいパスワードの確認 , class: "new-repassword" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"input-textbox" %>
    </div>
  
    <div class="field">
      <%= f.label :現在のパスワード, class:"new-password" %><br />
      <%= f.password_field :current_password, autocomplete: "current-password" , class:"input-textbox" %>
    </div>
  
    <div class="actions">
      <%= f.submit "更新", class: "bt-signup" %>
    </div>
  <% end %>
  <div class="actions">
  <%= link_to "戻る", :back  , class: "return" %>
  </div>
</div>