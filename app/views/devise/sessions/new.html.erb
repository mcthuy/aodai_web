<div class="login">
  <h2>Log in</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :メールアドレス ,class: "input-email" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "input-textbox" %>
    </div>
  <br />
    <div class="field">
      <%= f.label :パスワード , class: "input-password" %><br />
      <%= f.password_field :password, autocomplete: "current-password" , class: "input-textbox" %>
    </div>
  <br />
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me , class: "checkbox" %>
        <%= f.label :保存する , class: "remember_me" %>
      </div>
    <% end %>
  <br />
    <div class="actions">
      <%= f.submit "ログイン" , class: "bt-signin" %>
    </div>
  <% end %>
  <br />
  <%= render "devise/shared/links" %>
</div>
